<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bvrit.bvrithelp.departments"
    android:id="@+id/departments">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button android:layout_margin="4dp"
            android:id="@+id/basic_sciences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basic Sciences"
            android:background="@color/colorAccent"
            android:onClick="NextPage"/>
        <Button android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bio_medical"
            android:text="Bio Medical"
            android:background="@color/colorAccent"
            android:onClick="NextPage"/>

        <Button android:layout_margin="4dp"
            android:id="@+id/chemical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chemical"
            android:background="@color/colorAccent"
            android:onClick="NextPage"/>

        <Button android:layout_margin="4dp"
            android:id="@+id/civil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Civil"
            android:background="@color/colorAccent"
            android:onClick="NextPage"/>
        <Button android:layout_margin="4dp"
            android:id="@+id/cse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CSE"
            android:background="@color/colorAccent"
            android:onClick="NextPage"/>
        <Button android:layout_margin="4dp"
            android:id="@+id/ece"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ECE"
            android:background="@color/colorAccent"
            android:onClick="NextPage"/>
        <Button android:layout_margin="4dp"
            android:id="@+id/eee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EEE"
            android:background="@color/colorAccent"
            android:onClick="NextPage"/>
        <Button android:layout_margin="4dp"
            android:id="@+id/it"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IT"
            android:background="@color/colorAccent"
            android:onClick="NextPage"/>
        <Button android:layout_margin="4dp"
            android:id="@+id/mechanical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mechanical"
            android:background="@color/colorAccent"
            android:onClick="NextPage"/>
        <Button android:layout_margin="4dp"
            android:id="@+id/phe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PHE"
            android:background="@color/colorAccent"
            android:onClick="NextPage"/>
        <Button android:layout_margin="4dp"
            android:id="@+id/mba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MBA"
            android:background="@color/colorAccent"
            android:onClick="NextPage"/>
    </LinearLayout>
    </ScrollView>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation"
        android:layout_gravity="start">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>