<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bvrit.bvrithelp.Hostels"
    android:id="@+id/hostels"
    android:layout_margin="5dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="   Excellent hostel facilities have been provided for the students. At present there are three separate hostels in which two are meant for boys and one for girl students. The campus has accommodation available for about 500 boys and 200 girls and new buildings are under construction to facilitate more students from this academic year. Both the hostels have water heating facility, chilled mineral water and recreational facilities.\n"
            android:textSize="16sp"/>
<View
    android:layout_width="match_parent"
    android:layout_height="2sp"
    android:background="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Boys Hostel:"
            android:textColor="@color/colorPrimaryDark"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250sp"
            app:srcCompat="@drawable/nalanda"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mr. Shiva, Hostel Incharge"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+919848489738\n"
            android:textColorLink="@color/blue"
            android:clickable="true"
            android:autoLink="phone"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mr. Srinivas, Hostel Incharge"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+919885834834\n"
            android:textColorLink="@color/blue"
            android:clickable="true"
            android:autoLink="phone"
            android:textSize="15dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Girls Hostel:"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryDark"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250sp"
            app:srcCompat="@drawable/girlshostel"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mrs. Sunitha, Hostel Warden"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+919959296818\n"
            android:textColorLink="@color/blue"
            android:clickable="true"
            android:autoLink="phone"
            android:textSize="15dp"/>
    </LinearLayout>
    </ScrollView>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation"
        android:layout_gravity="start"/>
</android.support.v4.widget.DrawerLayout>
