<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bvrit.bvrithelp.Principal"
    android:id="@+id/principal">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="242dp"
                app:srcCompat="@drawable/principal"
                tools:layout_editor_absoluteX="113dp"
                tools:layout_editor_absoluteY="27dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:text="Dr. Y. Krishna Reddy"
                android:layout_marginTop="10sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="93dp"
                tools:layout_editor_absoluteY="284dp"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="(Principal)"
                android:textStyle="italic"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\n+91 7337411184"
                android:clickable="true"
                android:autoLink="phone"
                android:textColorLink="@color/blue"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\n+91 8458222000"
                android:clickable="true"
                android:autoLink="phone"
                android:textColorLink="@color/blue"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="\nprincipal@bvrit.ac.in"
                android:clickable="true"
                android:autoLink="email"
                android:textColorLink="@color/blue"/>
            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="      Dr. Y. Krishna Reddy, the Principal of B. V. Raju Institute of Technology, Vishnupur, Narsapur, Medak District as earlier worked as professor of Mechanical Engineering CBIT, Hyderabad.\n
                     He did his graduation from JNTUA, Anantapur(1976-81) and post-graduation from IIT Kharagpur (1981-83). He pursed his doctoral and research work at IIT Kharapur on fill time basis for 3 years on lien from CBIT. He had worked for two years in US on software projects. He has a passion for teaching. He is a life long learner. Learnt and taught many programming languages and CAD packages for Mechanical Engineering students. He was instrumental in computerization of academic and exam cell and controller of exams activities of CBIT."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="1" />

        </LinearLayout>

    </ScrollView>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation"
        android:layout_gravity="start"/>
</android.support.v4.widget.DrawerLayout>
